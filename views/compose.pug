extends layout.pug 

block content
    .popup 
        if error 
            p.error Something went wrong. Please try again.

        if success 
            p.success Post has been successfully published

    form.flex.compose-form(method='POST')
        label(for='title') Title
        input#title(type='text' name='title' autocomplete='off' required  minlength='5')
        label(for='description') Description
        input#description(type='text' name='description' autocomplete='off' required minlength='20' maxlength='125')
        label(for='author') Author
        input#author(type='text' name='author' autocomplete='off' required minlength='5')
        label(for='post') Post
        textarea#post(name='post' cols='30' rows='5' required )
        button(type='submit') Publish
